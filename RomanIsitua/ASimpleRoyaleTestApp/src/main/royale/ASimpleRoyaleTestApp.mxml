    <j:valuesImpl>
        <js:SimpleCSSValuesImpl />
    </j:valuesImpl>
    <j:beads>
        <js:ClassAliasBead />  
		<crux:JSStageEvents packageExclusionFilter="_default_"/>
        <crux:Crux>
			<!-- BeanProviders simply contain the non-display objects that Crux should process. -->
            <crux:beanProviders>
				<!-- an imported beanProvider (mxml based subclass) -->
                <config:Beans/>
				<!--We can repeat this structure 'crux:BeanProvider' to define new models / controllers 
				<crux:BeanProvider>
					<models:LovModel2 id="lovModel"/>
					<services:LovBO id="lovBO"/>
					<controllers:LovController id="lovController"/>
				</crux:BeanProvider>    -->
            </crux:beanProviders>

			<crux:config>
				<crux:CruxConfig>
					<crux:eventPackages>
						<fx:Array>
							<fx:String>org.apache.royale.examples.events.*</fx:String>
						</fx:Array>
					</crux:eventPackages>
					<crux:viewPackages>
						<fx:Array>
							<fx:String>org.apache.royale.examples.views.*</fx:String>
						</fx:Array>
					</crux:viewPackages>
				</crux:CruxConfig>
			</crux:config>

        </crux:Crux>
	</j:beads>

    <j:initialView>
        <views:MainView width="100%" height="100%"/>
    </j:initialView>
    
</j:Application>
