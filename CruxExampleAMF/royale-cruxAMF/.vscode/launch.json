{
    "version": "0.2.0",
    "configurations": [ 
        {
        "name": "Launch Chrome (localhost RoyaleCruxAMF)",
        "type": "chrome",
        "request": "launch",
        "sourceMaps": true,
        "url": "http://localhost:81/RoyaleCruxAMF/index.html",
        "webRoot": "${workspaceFolder}/target/javascript/bin/js-debug"
        },
        {
            "name": "Launch File - Royal example (Debug version)",
            "type": "chrome",
            "request": "launch",
            "sourceMaps": true,
            "url": "file:///${workspaceRoot}/target/javascript/bin/js-debug/index.html",
            "webRoot": "${workspaceRoot}/target/javascript/bin/js-debug"
        },
        {
            "name": "Launch File Allow File Access - Royal example (Debug version)",
            "type": "chrome",
            "request": "launch",
            "sourceMaps": true,
            //"runtimeExecutable": "/Applications/Brave Browser.app/Contents/MacOS/Brave Browser",
            "runtimeArgs": ["--allow-file-access-from-files", "--auto-ssl-client-auth"],
            "url": "file:///${workspaceRoot}/target/javascript/bin/js-debug/index.html",
            "webRoot": "${workspaceRoot}/target/javascript/bin/js-debug"
        }
    ]
}
